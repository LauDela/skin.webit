<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- osdvideosettings -->
	<defaultcontrol always="true">11</defaultcontrol>
	<controls>

		<!-- Menu -->
		<control type="group">
			<left>150</left>
			<top>150</top>

			<!-- Background -->
			<control type="image">
				<width>790</width>
				<height>695</height>
				<texture>osd/OSDSettingsBack.png</texture>
			</control>

			<!-- Heading label -->
			<control type="label" id="2">
				<left>20</left>
				<top>10</top>
				<width>750</width>
				<height>48</height>
				<font>Font48</font>
				<textcolor>DialogColor1</textcolor>
				<label>$INFO[VideoPlayer.ChannelName]</label>
			</control>

			<!-- Date label -->
			<control type="label" id="2">
				<left>20</left>
				<top>66</top>
				<width>750</width>
				<height>36</height>
				<font>Font36</font>
				<textcolor>DialogColor2</textcolor>
				<label>$INFO[Container(11).ListItem.StartDate]</label>
			</control>

			<!-- List -->
			<control type="list" id="11">
				<left>20</left>
				<top>116</top>
				<width>750</width>
				<height>561</height>
				<onleft>Close</onleft>
				<onright>Close</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="750" height="51">

					<!-- Start time -->
					<control type="label">
						<left>140</left>
						<top>2</top>
						<width>140</width>
						<height>51</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>DialogColor2</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>160</left>
						<width>520</width>
						<height>51</height>
						<textcolor>DialogColor2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<right>4</right>
						<top>14</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>10</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

				</itemlayout>

				<focusedlayout width="750" height="51">

					<!-- Start time -->
					<control type="label">
						<left>140</left>
						<top>2</top>
						<width>140</width>
						<height>51</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>DialogColor1</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>160</left>
						<width>520</width>
						<height>51</height>
						<textcolor>DialogColor1</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<right>4</right>
						<top>14</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>10</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

				</focusedlayout>

			</control>

		</control>

	</controls>

</window>
