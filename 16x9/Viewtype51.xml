<?xml version="1.0" encoding="UTF-8"?>
<includes>

	<include name="Viewtype51">

		<control type="group">
			<visible>Control.IsVisible(51)</visible>

			<control type="image">
			<left>0</left>
			<top>0</top>
			<width>1920</width>
			<height>540</height>
			<texture>menu_select.png</texture>
		</control>

		<control type="image">
			<left>0</left>
			<top>540</top>
			<width>1920</width>
			<height>540</height>
			<texture>menu.png</texture>
		</control>	

			<!-- Curve -->
			<control type="image">
				<right>20</right>
				<top>20</top>
				<width>1280</width>
				<height>1040</height>
				<texture border="40,0,0,0">common/Curve.png</texture>
				<visible>Skin.HasSetting(ShowCurve)</visible>
			</control>

			<!-- Poster image -->
			<control type="group">
				<visible>!SubString(ListItem.Icon,Default) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons)]</visible>
				<control type="image">
					<left>120</left>
					<top>225</top>
					<width>405</width>
					<height>666</height>
					<texture border="1,1,1,69">views/DropShadow.png</texture>
				</control>
				<control type="image">
					<left>120</left>
					<top>225</top>
					<width>405</width>
					<height>600</height>
					<fadetime>200</fadetime>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="center">scale</aspectratio>
				</control>
				<control type="image">
					<left>120</left>
					<top>225</top>
					<width>405</width>
					<height>600</height>
					<texture>views/OverlayAlbum.png</texture>
					<visible>Skin.HasSetting(Overlays)</visible>
				</control>
			</control>

			<!-- Album image -->
			<control type="group">
				<visible>!SubString(ListItem.Icon,Default) + [Container.Content(albums) | Container.Content(songs)]</visible>
				<control type="image">
					<left>120</left>
					<top>322</top>
					<width>405</width>
					<height>471</height>
					<texture border="1,1,1,69">views/DropShadow.png</texture>
				</control>
				<control type="image">
					<left>120</left>
					<top>322</top>
					<width>405</width>
					<height>405</height>
					<fadetime>200</fadetime>
					<texture>$INFO[ListItem.Icon]</texture>
					<aspectratio aligny="center">scale</aspectratio>
				</control>
				<control type="image">
					<left>120</left>
					<top>322</top>
					<width>405</width>
					<height>405</height>
					<texture>views/OverlayPosterFO.png</texture>
					<visible>Skin.HasSetting(Overlays)</visible>
				</control>
			</control>

			<!-- Default image -->
			<control type="image">
				<left>120</left>
				<top>225</top>
				<width>405</width>
				<height>600</height>
				<texture>$INFO[ListItem.Icon]</texture>
				<colordiffuse>OverlayColorFO</colordiffuse>
				<aspectratio align="center" aligny="center">keep</aspectratio>
				<visible>SubString(ListItem.Icon,Default) + [Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(albums) | Container.Content(songs)]</visible>
			</control>

			<!-- Episode Info -->
			<control type="group">
				<left>120</left>
				<top>190</top>
				<visible>Container.Content(episodes)</visible>

				<!-- Episode image -->
				<control type="group">
					<visible>!SubString(ListItem.Icon,Default)</visible>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>452</width>
						<height>352</height>
						<texture border="1,1,1,69">views/DropShadow.png</texture>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>452</width>
						<height>286</height>
						<fadetime>200</fadetime>
						<texture>$INFO[ListItem.Icon]</texture>
						<aspectratio aligny="center">scale</aspectratio>
					</control>
					<control type="image">
						<left>0</left>
						<top>0</top>
						<width>452</width>
						<height>286</height>
						<texture>views/OverlayEpisode.png</texture>
						<visible>Skin.HasSetting(Overlays)</visible>
					</control>
				</control>

				<!-- Season & Episode Info -->
				<control type="label">
					<left>0</left>
					<top>314</top>
					<width>500</width>
					<height>45</height>
					<font>Font42</font>
					<label>$INFO[ListItem.TVShowTitle]</label>
					<textcolor>TextColor1</textcolor>
				</control>
				<control type="label">
					<left>0</left>
					<top>366</top>
					<width>450</width>
					<height>45</height>
					<font>Font33</font>
					<textcolor>TextColor2</textcolor>
					<label>$INFO[ListItem.Title]</label>
				</control>
				<control type="label">
					<left>0</left>
					<top>420</top>
					<width>450</width>
					<height>45</height>
					<font>Font30</font>
					<textcolor>TextColor3</textcolor>
					<label>$INFO[ListItem.Season,$LOCALIZE[20373] , / ]$INFO[ListItem.Episode,$LOCALIZE[20359] ]</label>
				</control>
				<!-- Episode Plot -->
				<control type="textbox">
					<left>0</left>
					<top>474</top>
					<width>450</width>
					<height>246</height>
					<label>$VAR[Plot]</label>
					<textcolor>TextColor1</textcolor>
					<shadowcolor>TextColor4</shadowcolor>
					<autoscroll delay="5000" time="1400" repeat="10000">true</autoscroll>
				</control>

			</control>

			<!-- List -->
			<control type="fixedlist" id="51">
				<left>750</left>
				<centertop>50%</centertop>
				<width>1050</width>
				<height>720</height>
				<onup>51</onup>
				<ondown>51</ondown>
				<onleft>60</onleft>
				<onright condition="!Skin.HasSetting(KioskMode)">3001</onright>
				<pagecontrol>60</pagecontrol>
				<focusposition>3</focusposition>
				<orientation>vertical</orientation>
				<viewtype label="535">list</viewtype>
				<scrolltime tween="sine" easing="out">240</scrolltime>
				<visible>Container.Content(movies) | Container.Content(tvshows) | Container.Content(seasons) | Container.Content(episodes) | Container.Content(albums)</visible>

				<itemlayout height="90" width="1050">
					<control type="label">
						<left>32</left>
						<top>0</top>
						<width>1018</width>
						<height>90</height>
						<font>Font36</font>
						<label>$VAR[Label1]</label>
						<textcolor>TextColor2</textcolor>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>38</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>OverlayColorNF</colordiffuse>
						<animation effect="fade" start="50" end="50" condition="true">Conditional</animation>
						<visible>Skin.HasSetting(WatchedFlags)</visible>
					</control>
				</itemlayout>

				<focusedlayout height="180" width="1050">
					<control type="label">
						<left>32</left>
						<top>43</top>
						<width>1018</width>
						<height>48</height>
						<font>Font48</font>
						<label>$VAR[Label1]</label>
						<textcolor>TextColor1</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(51)">Conditional</animation>
					</control>
					<control type="label">
						<left>32</left>
						<top>100</top>
						<width>1018</width>
						<height>27</height>
						<font>Font27</font>
						<label>$VAR[Label2]</label>
						<textcolor>TextColor2</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(51)">Conditional</animation>
					</control>
					<!-- Watched status -->
					<control type="image">
						<left>0</left>
						<top>61</top>
						<width>14</width>
						<height>14</height>
						<texture>$VAR[StatusOverlay]</texture>
						<colordiffuse>OverlayColorFO</colordiffuse>
						<animation effect="fade" start="100" end="50" time="200" tween="cubic" easing="out" reversible="true" condition="!Control.HasFocus(51)">Conditional</animation>
						<visible>Skin.HasSetting(WatchedFlags)</visible>
					</control>
				</focusedlayout>

			</control>

		</control>

	</include>

</includes>
