<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- filestackingdialog -->
	<defaultcontrol always="true">450</defaultcontrol>
	<include>DialogZoomAnimation</include>

	<controls>

		<!-- Background -->
		<include>DialogBackgroundImage</include>

		<!-- Heading -->
		<control type="label" id="1">
			<left>150</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<label>$INFO[ListItem.Label]</label>
		</control>

		<!-- List -->
		<control type="list" id="450">
			<left>150</left>
			<top>235</top>
			<width>1620</width>
			<height>580</height>
			<onup>noop</onup>
			<ondown>9000</ondown>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<orientation>vertical</orientation>
			<viewtype label="list">list</viewtype>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<itemlayout width="1620" height="58">
				<control type="label">
					<width>1620</width>
					<height>58</height>
					<font>Font36</font>
					<textcolor>DialogColor2</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>

			<focusedlayout width="1620" height="58">
				<control type="label">
					<width>1620</width>
					<height>58</height>
					<font>Font36</font>
					<textcolor>DialogColor1</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="fade" start="100" end="75" time="0" condition="!Control.HasFocus(3)">Conditional</animation>
				</control>
			</focusedlayout>

		</control>

	</controls>

</window>