<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pvrosdchannels -->
	<defaultcontrol always="true">11</defaultcontrol>

	<controls>

		<!-- Menu -->
		<control type="group">
			<left>150</left>
			<top>150</top>

			<!-- Background -->
			<control type="image">
				<width>790</width>
				<height>695</height>
				<texture>osd/OSDSettingsBack.png</texture>
			</control>

			<!-- Heading label -->
			<control type="label" id="2">
				<left>20</left>
				<top>14</top>
				<width>750</width>
				<height>48</height>
				<font>Font48</font>
				<textcolor>DialogColor1</textcolor>
				<label>[B]$INFO[VideoPlayer.ChannelGroup][/B]</label>
			</control>

			<!-- List -->
			<control type="list" id="11">
				<left>20</left>
				<top>116</top>
				<width>750</width>
				<height>540</height>
				<onleft>PreviousChannelGroup</onleft>
				<onright>NextChannelGroup</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="750" height="108">

					<!-- Channel image -->
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>90</width>
						<height>90</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
					</control>

					<!-- Start time -->
					<control type="label">
						<left>268</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- End time -->
					<control type="label">
						<left>268</left>
						<top>54</top>
						<width>200</width>
						<height>27</height>
						<align>right</align>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.EndTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>308</left>
						<top>12</top>
						<width>442</width>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Genre -->
					<control type="label">
						<left>308</left>
						<top>54</top>
						<width>442</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Genre]</label>
					</control>

					<!-- Progress -->
					<control type="progress">
						<left>308</left>
						<top>93</top>
						<width>436</width>
						<height>6</height>
						<colordiffuse>OverlayColorNF</colordiffuse>
						<texturebg border="2">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="2">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<info>ListItem.Progress</info>
						<visible>ListItem.HasEpg</visible>
					</control>

				</itemlayout>

				<focusedlayout width="750" height="108">

					<!-- Channel image -->
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>90</width>
						<height>90</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
					</control>

					<!-- Start time -->
					<control type="label">
						<left>268</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- End time -->
					<control type="label">
						<left>268</left>
						<top>54</top>
						<width>200</width>
						<height>27</height>
						<align>right</align>
						<label>$INFO[ListItem.EndTime]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>308</left>
						<top>12</top>
						<width>442</width>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Genre -->
					<control type="label">
						<left>308</left>
						<top>54</top>
						<width>442</width>
						<height>27</height>
						<font>Font27</font>
						<label>$INFO[ListItem.Genre]</label>
					</control>

					<!-- Progress -->
					<control type="progress">
						<left>308</left>
						<top>93</top>
						<width>436</width>
						<height>6</height>
						<colordiffuse>OverlayColorFO</colordiffuse>
						<texturebg border="2">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="2">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<info>ListItem.Progress</info>
						<visible>ListItem.HasEpg</visible>
					</control>

				</focusedlayout>

			</control>

		</control>

	</controls>

</window>