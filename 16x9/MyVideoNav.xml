<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videolibrary -->
	<!--<backgroundcolor>0x00000000</backgroundcolor>-->
	<defaultcontrol always="true">52</defaultcontrol>
	<views>52,50</views>

	<controls>

		<!-- Background
		<include>WindowBackgroundImage</include>-->

		<!-- Fanart 
		<include>Fanart</include>
                -->
		 

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Views -->
			<include>Viewtype52</include>
                        <include>Viewtype50</include>

			
		</control>

		

		<!-- Options -->
		<control type="group">
			<include>OptionsAnimation</include>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus() | ControlGroup(4000).HasFocus() | ControlGroup(5000).HasFocus()</visible>

			<!-- Background 
			<include>OptionsBackgroundImage</include>
                        -->
			<!-- Main group -->
			<control type="group">
				<left>1800</left>
				<top>600</top>

				<!-- Scroll -->
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>72</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
				</control>
				<control type="image">
					<left>0</left>
					<top>0</top>
					<width>24</width>
					<height>20</height>
					<texture border="1,12,1,1" colordiffuse="DialogOverlayColorFO">common/ScrollbarGripHorizontalFO.png</texture>
					<animation effect="slide" start="0" end="24" time="200" condition="ControlGroup(4000).HasFocus()">Conditional</animation>
					<animation effect="slide" start="0" end="48" time="200" condition="ControlGroup(5000).HasFocus()">Conditional</animation>
				</control>

				<!-- Heading -->
				<control type="label">
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<left>0</left>
					<top>34</top>
					<width>1200</width>
					<height>72</height>
					<label>$VAR[CustomMenuHeading]</label>
					<font>Font72</font>
					<textcolor>Noir</textcolor>
				</control>

				<!-- Look controls -->
				<control type="grouplist" id="3000">
					<left>0</left>
					<top>130</top>
					<width>200</width>
					<height>400</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>52</onleft>
					<onright>4001</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">3001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="3001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- View -->
					<control type="togglebutton" id="99">
						<width>70</width>
                                                <height>70</height>
						<onclick>Container.NextViewMode</onclick>
                                                <texturefocus>119.png</texturefocus>
                                                <alttexturefocus>120.png</alttexturefocus>
                                                <usealttexture>Control.IsVisible(50)</usealttexture>
					</control>
				</control>

				<!-- Layout controls -->
				<control type="grouplist" id="4000">
					<left>0</left>
					<top>130</top>
					<width>200</width>
					<height>400</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft condition="!Skin.HasSetting(KioskMode)">3001</onleft>
					<onright>5001</onright>
					<itemgap>2</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">4001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(4000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="4001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Sort by -->
					<control type="button" id="3">
						<include>OptionButtons</include>
						<label>103</label>
						<visible>Control.IsEnabled(3)</visible>
					</control>
					<!-- Sort ascending/descending -->
					<control type="togglebutton" id="4">
						<include>OptionButtons</include>
						<label>584</label>
						<altlabel>585</altlabel>
						<usealttexture>Container.SortDirection(Descending)</usealttexture>
						<visible>Control.IsEnabled(4)</visible>
					</control>
					<!-- Watched toggle -->
					<control type="radiobutton" id="14">
						<include>OptionButtons</include>
						<label>20367</label>
						<visible>Control.IsEnabled(14)</visible>
					</control>
					<!-- Filter -->
					<control type="edit" id="19">
						<include>OptionButtons</include>
						<label>587</label>
						<visible>Container.CanFilter + !Container.CanFilterAdvanced</visible>
					</control>
					<!-- Filter -->
					<control type="radiobutton" id="93">
						<include>OptionButtons</include>
						<label>587</label>
						<onclick>Right</onclick>
						<onclick>Right</onclick>
						<onclick>Filter</onclick>
						<selected>Container.Filtered</selected>
						<visible>Container.CanFilterAdvanced</visible>
					</control>
				</control>

				<!-- More controls -->
				<control type="grouplist" id="5000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>4001</onleft>
					<onright>50</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">5001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(5000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="5001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- Update library -->
					<control type="togglebutton" id="20">
						<include>OptionButtons</include>
						<label>653</label>
						<altlabel>13353</altlabel>
						<usealttexture>Library.IsScanningVideo</usealttexture>
					</control>
					<!-- Search -->
					<control type="button" id="8">
						<include>OptionButtons</include>
						<label>137</label>
						<visible>Control.IsEnabled(8)</visible>
					</control>
					<!-- PartyMode -->
					<control type="radiobutton" id="16">
						<include>OptionButtons</include>
						<label>589</label>
						<visible>Container.Content(MusicVideos)</visible>
					</control>
					<!-- Unlock Shares -->
					<control type="radiobutton" id="11">
						<include>OptionButtons</include>
						<label>20336</label>
						<onclick>XBMC.Mastermode</onclick>
						<selected>System.IsMaster</selected>
						<visible>System.HasLocks</visible>
					</control>
					<!-- Settings -->
					<control type="button" id="92">
						<include>OptionButtons</include>
						<label>5</label>
						<onclick>ActivateWindow(videossettings)</onclick>
					</control>
				</control>

			</control>

		</control>
		<control type="image">
			<left>400</left>
			<top>400</top>
			<width>1500</width>
			<height>800</height>
			<texture>menu.png</texture>
			<animation effect="slide" start="0,0" end="0,1000" time="200" >WindowOpen</animation>
			<animation effect="slide" start="0,1000" end="0,0" time="200" >WindowClose</animation>
		</control>

      		<include>Menus</include>
                <!-- Time -->
		<include>Time</include>

	</controls>

</window>
