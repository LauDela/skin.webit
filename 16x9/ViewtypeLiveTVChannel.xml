<includes>

	<include name="LiveTVChannel">

		<control type="group">
			<visible>Control.IsVisible(11)</visible>

			<!-- Curve -->
			<control type="image">
				<left>20</left>
				<top>20</top>
				<width>1220</width>
				<height>1040</height>
				<texture flipx="true" border="0,0,40,0">common/Curve.png</texture>
				<visible>Skin.HasSetting(ShowCurve)</visible>
			</control>

			<!-- Start date -->
			<control type="label">
				<left>120</left>
				<top>170</top>
				<width>800</width>
				<height>33</height>
				<aligny>top</aligny>
				<font>Font33</font>
				<label>$INFO[ListItem.StartDate]</label>
			</control>

			<!-- List -->
			<control type="list" id="11">
				<left>120</left>
				<top>226</top>
				<width>1020</width>
				<height>648</height>
				<onup>11</onup>
				<ondown>11</ondown>
				<onleft>3000</onleft>
				<onright>70</onright>
				<pagecontrol>70</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="535">list</viewtype>				
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1020" height="108">

					<!-- Channel image -->
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>90</width>
						<height>90</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
					</control>

					<!-- Channel number -->
					<control type="label">
						<left>118</left>
						<width>82</width>
						<height>108</height>
						<textcolor>TextColor2</textcolor>
						<label>[B]$INFO[ListItem.ChannelNumber][/B]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>218</left>
						<top>12</top>
						<width>802</width>
						<height>36</height>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>218</left>
						<top>54</top>
						<width>802</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>TextColor4</textcolor>
						<label>$INFO[ListItem.Title]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<right>5</right>
						<top>40</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>36</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

					<!-- Progress -->
					<control type="progress">
						<left>218</left>
						<top>93</top>
						<width>783</width>
						<height>6</height>
						<colordiffuse>OverlayColorNF</colordiffuse>
						<texturebg border="2">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="2">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<info>ListItem.Progress</info>
						<visible>ListItem.HasEpg</visible>
					</control>

				</itemlayout>

				<focusedlayout width="1020" height="108">

					<!-- Background -->
					<control type="image">
						<width>1020</width>
						<height>108</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Channel image -->
					<control type="image">
						<left>9</left>
						<top>9</top>
						<width>90</width>
						<height>90</height>
						<texture background="true" fallback="pvr/defaultchannel.png">$VAR[PVRChannelIcon]</texture>
					</control>

					<!-- Channel number -->
					<control type="label">
						<left>118</left>
						<width>82</width>
						<height>108</height>
						<label>[B]$INFO[ListItem.ChannelNumber][/B]</label>
					</control>

					<!-- Channel name -->
					<control type="label">
						<left>218</left>
						<top>12</top>
						<width>802</width>
						<height>36</height>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>218</left>
						<top>54</top>
						<width>802</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Title]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<right>5</right>
						<top>40</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<right>0</right>
						<top>36</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

					<!-- Progress -->
					<control type="progress">
						<left>218</left>
						<top>93</top>
						<width>783</width>
						<height>6</height>
						<colordiffuse>OverlayColorFO</colordiffuse>
						<texturebg border="2">osd/OSDProgressBack.png</texturebg>
						<lefttexture>-</lefttexture>
						<midtexture border="2">osd/OSDProgressBar.png</midtexture>
						<righttexture>-</righttexture>
						<info>ListItem.Progress</info>
						<visible>ListItem.HasEpg</visible>
					</control>

				</focusedlayout>

			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="70">
				<left>1152</left>
				<top>226</top>
				<width>20</width>
				<height>648</height>
				<onleft>11</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>OverlayColorNF</colordiffuse>
				<texturesliderbackground border="6,1,8,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1" colordiffuse="DialogOverlayColorFO">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

			<!-- Channel preview & info -->
			<control type="group">
				<right>120</right>
				<top>246</top>
				<width>512</width>

				<!-- Program name -->
				<control type="label">
					<width>512</width>
					<label>$INFO[Container(11).ListItem.Title]</label>
				</control>

				<control type="group">
					<top>76</top>
					<visible>Container(11).ListItem.HasEpg</visible>

					<!-- Plot -->
					<control type="textbox">
						<width>512</width>
						<height>460</height>
						<align>justify</align>
						<font>Font25</font>
						<textcolor>TextColor1</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<info>Container(11).ListItem.Plot</info>
					</control>

					<!-- Next program -->
					<control type="label">
						<right>0</right>
						<top>504</top>
						<width>512</width>
						<height>30</height>
						<font>Font30</font>
						<align>right</align>
						<label>$INFO[Container(11).ListItem.NextTitle,$LOCALIZE[19031]: ,]$INFO[Container(11).ListItem.NextStartTime, (,)]</label>
					</control>

				</control>

			</control>

			<!-- Channel count -->
			<control type="grouplist">
				<right>120</right>
				<bottom>110</bottom>
				<width>800</width>
				<height>44</height>
				<itemgap>6</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$INFO[Container(11).NumItems]</label>
					<font>Font25</font>
					<textcolor>TextColor2</textcolor>

				</control>
				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$VAR[ContentType]</label>
					<font>Font33</font>
					<textcolor>TextColor2</textcolor>
				</control>

			</control>

		</control>

	</include>

</includes>