<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">50</defaultcontrol>
	<views>54,52</views>

	<controls>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<!-- Views -->
			<include>Viewtype52</include>
			<include>Viewtype54</include>

			<!-- Item count -->
			<include>ItemCount</include>

		</control>
                <control type="image">
			<left>400</left>
			<top>400</top>
			<width>1500</width>
			<height>800</height>
			<texture>menu.png</texture>
			<animation effect="slide" start="0,0" end="0,1000" time="200" >WindowOpen</animation>
			<animation effect="slide" start="0,1000" end="0,0" time="200" >WindowClose</animation>
		</control>
                <include>Menus</include>
		<!-- Time -->
		<include>Time</include>



	</controls>

</window>