<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- osdvideosettings -->
	<defaultcontrol always="true">5</defaultcontrol>

	<controls>

		<!-- Menu -->
		<control type="group">
			<left>570</left>
			<top>245</top>
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>

			<!-- Background -->
			<control type="image">
				<width>790</width>
				<height>600</height>
				<texture>osd/OSDSettingsBack.png</texture>
			</control>

			<!-- Heading label -->
			<control type="label" id="2">
				<left>20</left>
				<top>10</top>
				<width>750</width>
				<height>48</height>
				<font>Font48</font>
				<textcolor>DialogColor1</textcolor>
			</control>

			<!-- Grouplist -->
			<control type="grouplist" id="5">
				<left>20</left>
				<top>80</top>
				<width>750</width>
				<height>504</height>
				<itemgap>6</itemgap>
				<onleft>close</onleft>
				<onright>close</onright>
				<onup>noop</onup>
				<ondown>noop</ondown>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="out">240</scrolltime>
			</control>

			<!-- Default button -->
			<control type="button" id="7">
				<width>750</width>
				<height>45</height>
				<font>Font27</font>
			</control>

			<!-- Default radiobutton -->
			<control type="radiobutton" id="8">
				<width>750</width>
				<height>45</height>
				<font>Font27</font>
				<radiowidth>40</radiowidth>
				<radioheight>20</radioheight>
				<textureradioonfocus border="1">osd/OSDRadioOn.png</textureradioonfocus>
				<textureradioonnofocus border="1">osd/OSDRadioOn.png</textureradioonnofocus>
				<textureradioofffocus border="1">osd/OSDRadioOff.png</textureradioofffocus>
				<textureradiooffnofocus border="1">osd/OSDRadioOff.png</textureradiooffnofocus>
			</control>

			<!-- Default spincontrolex -->
			<control type="spincontrolex" id="9">
				<width>750</width>
				<height>45</height>
				<font>Font27</font>
			</control>

			<!-- Default sliderex -->
			<control type="sliderex" id="10">
				<width>750</width>
				<height>45</height>
				<font>Font27</font>
				<sliderwidth>150</sliderwidth>
				<sliderheight>20</sliderheight>
				<texturesliderbar border="10,0,10,0">osd/OSDSliderBack.png</texturesliderbar>
				<textureslidernib border="10,0,10,0">osd/OSDSliderNib.png</textureslidernib>
				<textureslidernibfocus border="10,0,10,0">osd/OSDSliderNib.png</textureslidernibfocus>
			</control>

		</control>

	</controls>

</window>