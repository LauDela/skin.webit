<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- pvrchannelmanager -->
	<defaultcontrol always="true">20</defaultcontrol>
	<include>DialogZoomAnimation</include>

	<controls>

		<!-- Background -->
		<include>DialogBackgroundImage</include>

		<!-- Heading -->
		<control type="label">
			<left>150</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<label>19199</label>
		</control>

		<!-- Left list -->			
		<control type="list" id="20">
			<left>150</left>
			<top>228</top>
			<width>800</width>
			<height>660</height>
			<onup>20</onup>
			<ondown>20</ondown>
			<onleft>noop</onleft>
			<onright>9000</onright>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<itemlayout width="800" height="66">

				<control type="group">
					<animation effect="fade" start="100" end="50" condition="!ListItem.Property(ActiveChannel)">Conditional</animation>
					<control type="image">
						<left>3</left>
						<top>3</top>
						<width>60</width>
						<height>60</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>80</left>
						<width>720</width>
						<height>66</height>
						<textcolor>SelectedColor</textcolor>
						<selectedcolor>SelectedColor</selectedcolor>
						<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
						<visible>ListItem.Property(Changed)</visible>
					</control>
					<control type="label">
						<left>80</left>
						<width>720</width>
						<height>66</height>
						<textcolor>DialogColor2</textcolor>
						<selectedcolor>DialogColor2</selectedcolor>
						<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
						<visible>!ListItem.Property(Changed)</visible>
					</control>
				</control>

			</itemlayout>

			<focusedlayout width="800" height="132">

				<control type="group">
					<animation effect="fade" start="100" end="50" condition="!ListItem.Property(ActiveChannel)">Conditional</animation>
					<animation effect="fade" start="100" end="75" condition="!Control.HasFocus(20)">Conditional</animation>
					<control type="image">
						<left>3</left>
						<top>3</top>
						<width>60</width>
						<height>60</height>
						<texture>$INFO[ListItem.Icon]</texture>
					</control>
					<control type="label">
						<left>80</left>
						<width>720</width>
						<height>66</height>
						<textcolor>SelectedColor</textcolor>
						<selectedcolor>SelectedColor</selectedcolor>
						<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
						<visible>ListItem.Property(Changed)</visible>
					</control>
					<control type="label">
						<left>80</left>
						<width>720</width>
						<height>66</height>
						<textcolor>DialogColor1</textcolor>
						<selectedcolor>DialogColor1</selectedcolor>
						<label>$INFO[ListItem.Property(Number),(,) ]$INFO[ListItem.Property(Name)]</label>
						<visible>!ListItem.Property(Changed)</visible>
					</control>
					<control type="label">
						<top>80</top>
						<left>20</left>
						<width>860</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>SelectedColor</textcolor>
						<selectedcolor>SelectedColor</selectedcolor>
						<label>$LOCALIZE[19210]: $INFO[ListItem.Property(ClientName)]</label>
						<visible>ListItem.Property(Changed)</visible>
					</control>
					<control type="label">
						<top>80</top>
						<left>20</left>
						<width>860</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>DialogColor1</textcolor>
						<selectedcolor>DialogColor1</selectedcolor>
						<label>$LOCALIZE[19210]: $INFO[ListItem.Property(ClientName)]</label>
						<visible>!ListItem.Property(Changed)</visible>
					</control>
				</control>

			</focusedlayout>

		</control>

		<control type="grouplist" id="9000">
			<left>960</left>
			<top>228</top>
			<width>800</width>
			<height>660</height>
			<itemgap>0</itemgap>
			<onleft>20</onleft>
			<onright>noop</onright>
			<onup>noop</onup>
			<ondown>4</ondown>
			<orientation>vertical</orientation>
			<usecontrolcoords>true</usecontrolcoords>

			<!-- Channel options header -->
			<control type="label" id="100">
				<width>800</width>
				<height>66</height>
				<label>$LOCALIZE[19029] $LOCALIZE[33063]</label>
			</control>

			<!-- Channel activated -->
			<control type="radiobutton" id="7">
				<width>800</width>
				<label>19074</label>
			</control>

			<!-- Channel name -->
			<control type="edit" id="8">
				<width>800</width>
				<textoffsetx>20</textoffsetx>
				<textwidth>760</textwidth>
				<label>19201</label>
				<texturefocus>dialogs/DialogTextBackground.png</texturefocus>
				<texturenofocus>dialogs/DialogTextBackground.png</texturenofocus>
			</control>

			<!-- Channel logo button -->
			<control type="button" id="9">
				<width>800</width>
				<label>19202</label>
			</control>

			<!-- Current channel logo -->
			<control type="image" id="10">
				<top>-63</top>
				<left>737</left>
				<width>60</width>
				<height>60</height>
				<texture>$INFO[ListItem.Icon]</texture>
			</control>

			<!-- EPG activated -->
			<control type="radiobutton" id="12">
				<width>800</width>
				<label>19074</label>
			</control>

			<!-- EPG source -->
			<control type="spincontrolex" id="13">
				<width>800</width>
				<textwidth>760</textwidth>
				<label>19200</label>
			</control>

			<!-- Parental locked -->
			<control type="radiobutton" id="14">
				<width>800</width>
				<label>19267</label>
			</control>

			<!-- Edit channel button -->
			<control type="button" id="31">
				<width>800</width>
				<label>19203</label>
			</control>

			<!-- Delete channel button -->
			<control type="button" id="32">
				<width>800</width>
				<label>19211</label>
			</control>

			<!-- New channel button -->
			<control type="button" id="33">
				<width>800</width>
				<label>19204</label>
			</control>

		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9001">
			<left>150</left>
			<top>926</top>
			<width>1620</width>
			<itemgap>0</itemgap>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<onup>9000</onup>
			<ondown>noop</ondown>
			<defaultcontrol>4</defaultcontrol>
			<orientation>horizontal</orientation>

			<!-- OK Button -->
			<control type="button" id="4">
				<width>260</width>
				<label>186</label>
			</control>

			<!-- Cancel Button -->
			<control type="button" id="6">
				<width>260</width>
				<label>222</label>
			</control>

			<!-- Apply changes Button -->
			<control type="button" id="5">
				<width>366</width>
				<label>14070</label>
			</control>

			<!-- TV/Radio Button -->
			<control type="togglebutton" id="34">
				<width>366</width>
				<label>19024</label>
				<altlabel>19023</altlabel>
				<usealttexture>!IsEmpty(Window.Property(IsRadio))</usealttexture>
			</control>

			<!-- Group Manager Button -->
			<control type="button" id="30">
				<width>366</width>
				<label>19205</label>
			</control>

		</control>

	</controls>

</window>