<includes>

	<include name="LiveTVGuideChannel">

		<control type="group">
			<visible>Control.IsVisible(15)</visible>

			<!-- Curve -->
			<control type="image">
				<left>20</left>
				<top>20</top>
				<width>1220</width>
				<height>1040</height>
				<texture flipx="true" border="0,0,40,0">common/Curve.png</texture>
				<visible>Skin.HasSetting(ShowCurve)</visible>
			</control>

			<!-- Start date -->
			<control type="label">
				<left>120</left>
				<top>170</top>
				<width>800</width>
				<height>33</height>
				<aligny>top</aligny>
				<font>Font33</font>
				<label>$INFO[ListItem.StartDate]</label>
			</control>

			<!-- List -->
			<control type="list" id="15">
				<left>120</left>
				<top>226</top>
				<width>1020</width>
				<height>648</height>
				<onup>15</onup>
				<ondown>15</ondown>
				<onleft>3000</onleft>
				<onright>70</onright>
				<pagecontrol>70</pagecontrol>
				<preloaditems>2</preloaditems>
				<viewtype label="535">list</viewtype>				
				<scrolltime tween="sine" easing="out">240</scrolltime>

				<itemlayout width="1020" height="108">

					<!-- Start time -->
					<control type="label">
						<left>200</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- Duration -->
					<control type="label">
						<left>200</left>
						<top>62</top>
						<width>200</width>
						<height>27</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>TextColor4</textcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<left>226</left>
						<top>40</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<left>221</left>
						<top>36</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>280</left>
						<top>12</top>
						<width>740</width>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Genre -->
					<control type="label">
						<left>280</left>
						<top>62</top>
						<width>740</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>TextColor4</textcolor>
						<label>$INFO[ListItem.Genre]</label>
					</control>

				</itemlayout>

				<focusedlayout width="1020" height="108">

					<!-- Background -->
					<control type="image">
						<width>1020</width>
						<height>108</height>
						<texture border="2">pvr/ProgressBack.png</texture>
					</control>

					<!-- Start time -->
					<control type="label">
						<left>200</left>
						<top>12</top>
						<width>200</width>
						<align>right</align>
						<label>$INFO[ListItem.StartTime]</label>
					</control>

					<!-- Duration -->
					<control type="label">
						<left>200</left>
						<top>62</top>
						<width>200</width>
						<height>27</height>
						<font>Font27</font>
						<align>right</align>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Duration]</label>
					</control>

					<!-- Recording image -->
					<control type="image">
						<left>226</left>
						<top>40</top>
						<width>30</width>
						<height>30</height>
						<texture>pvr/Recording.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>

					<!-- Timer image -->
					<control type="image">
						<left>221</left>
						<top>36</top>
						<width>38</width>
						<height>40</height>
						<texture>pvr/Timer.png</texture>
						<visible>ListItem.HasTimer + !ListItem.IsRecording</visible>
					</control>

					<!-- Program name -->
					<control type="label">
						<left>280</left>
						<top>12</top>
						<width>740</width>
						<label>$INFO[ListItem.Label]</label>
					</control>

					<!-- Genre -->
					<control type="label">
						<left>280</left>
						<top>62</top>
						<width>740</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>TextColor2</textcolor>
						<label>$INFO[ListItem.Genre]</label>
					</control>

				</focusedlayout>

			</control>

			<!-- Scrollbar -->
			<control type="scrollbar" id="70">
				<left>1152</left>
				<top>226</top>
				<width>20</width>
				<height>648</height>
				<onleft>15</onleft>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<colordiffuse>OverlayColorNF</colordiffuse>
				<texturesliderbackground border="6,1,8,1">common/ScrollBackground.png</texturesliderbackground>
				<texturesliderbar border="8,1,6,1">common/ScrollbarGripNF.png</texturesliderbar>
				<texturesliderbarfocus border="8,1,6,1" colordiffuse="DialogOverlayColorFO">common/ScrollbarGripFO.png</texturesliderbarfocus>
				<textureslidernib>-</textureslidernib>
				<textureslidernibfocus>-</textureslidernibfocus>
				<visible>!Skin.HasSetting(Scrollbars)</visible>
			</control>

			<!-- Channel preview & info -->
			<control type="group">
				<right>120</right>
				<top>246</top>
				<width>512</width>

				<!-- Program name -->
				<control type="label">
					<width>512</width>
					<label>$INFO[Container(15).ListItem.Title]</label>
				</control>

				<control type="group">
					<top>76</top>

					<!-- Plot -->
					<control type="textbox">
						<width>512</width>
						<height>460</height>
						<align>justify</align>
						<font>Font25</font>
						<textcolor>TextColor1</textcolor>
						<shadowcolor>ShadowColor</shadowcolor>
						<info>Container(15).ListItem.Plot</info>
					</control>

					<!-- Genre -->
					<control type="label">
						<right>0</right>
						<top>504</top>
						<width>512</width>
						<height>30</height>
						<font>Font30</font>
						<align>right</align>
						<label>$INFO[Container(15).ListItem.Genre]</label>
					</control>

				</control>

			</control>

			<!-- Channel count -->
			<control type="grouplist">
				<right>120</right>
				<bottom>110</bottom>
				<width>800</width>
				<height>44</height>
				<itemgap>6</itemgap>
				<align>right</align>
				<orientation>horizontal</orientation>
				<usecontrolcoords>true</usecontrolcoords>

				<control type="label">
					<top>3</top>
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$INFO[Container(15).NumItems]</label>
					<font>Font25</font>
					<textcolor>TextColor2</textcolor>
				</control>

				<control type="label">
					<width>auto</width>
					<height>44</height>
					<align>right</align>
					<label>$VAR[ContentType]</label>
					<font>Font33</font>
					<textcolor>TextColor2</textcolor>
				</control>

			</control>

		</control>

	</include>

</includes>