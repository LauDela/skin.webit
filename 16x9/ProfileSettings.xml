<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- profilesettings -->
	<defaultcontrol always="true">5</defaultcontrol>
	<include>DialogZoomAnimation</include>

	<controls>

		<!-- Background -->
		<include>DialogBackgroundImage</include>

		<!-- Heading -->
		<control type="label">
			<left>150</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
			<textcolor>DialogColor1</textcolor>
			<label>$INFO[Window.Property(heading)]</label>
		</control>

		<!-- Image -->
		<control type="image" id="2">
			<left>150</left>
			<top>225</top>
			<width>405</width>
			<height>600</height>
			<aspectratio aligny="center">keep</aspectratio>
			<texture>DefaultUser.png</texture>
		</control>

		<!-- Grouplist -->
		<control type="grouplist" id="5">
			<left>600</left>
			<top>244</top>
			<width>1200</width>
			<height>720</height>
			<itemgap>0</itemgap>
			<onleft>9001</onleft>
			<onright>9001</onright>
			<onup>noop</onup>
			<ondown>9001</ondown>
			<orientation>vertical</orientation>
			<scrolltime tween="sine" easing="out">240</scrolltime>
		</control>

		<!-- Default button -->
		<control type="button" id="7">
			<width>1200</width>
			<height>66</height>
		</control>

		<!-- Default radiobutton -->
		<control type="radiobutton" id="8">
			<width>1200</width>
			<height>66</height>
			<textwidth>1120</textwidth>
		</control>

		<!-- Default spincontrolex -->
		<control type="spincontrolex" id="9">
			<width>1200</width>
			<height>66</height>
			<textwidth>1120</textwidth>
		</control>

		<!-- Default image -->
		<control type="image" id="11">
			<width>1200</width>
			<height>20</height>
			<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
		</control>

		<!-- Button grouplist -->
		<control type="grouplist" id="9001">
			<left>600</left>
			<top>926</top>
			<width>1200</width>
			<itemgap>0</itemgap>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<onup>5</onup>
			<ondown>noop</ondown>
			<defaultcontrol>28</defaultcontrol>
			<orientation>horizontal</orientation>

			<!-- OK Button -->
			<control type="button" id="28">
				<width>400</width>
				<label>186</label>
			</control>

			<!-- Cancel Button -->
			<control type="button" id="29">
				<width>400</width>
				<label>222</label>
			</control>

		</control>

	</controls>

</window>