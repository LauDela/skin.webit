<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- videolibrary -->
	<backgroundcolor>0x00000000</backgroundcolor>
	<defaultcontrol>32</defaultcontrol>

	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Main group -->
		<control type="group">
			<include>WindowFadeAnimation</include>

			<control type="group" id="50">
				<include>EPGTimeline</include>
				<include>LiveTVChannel</include>
				<include>LiveRadioChannel</include>
				<include>LiveTVRecordings</include>
				<include>LiveTVTimers</include>
				<include>LiveTVGuideChannel</include>
				<include>LiveTVGuideNowNext</include>
				<include>LiveTVSearch</include>
			</control>

		</control>

		<!-- Time -->
		<include>Time</include>

		<!-- Options -->
		<control type="group">
			<include>OptionsAnimation</include>
			<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

			<!-- Background -->
			<include>OptionsBackgroundImage</include>

			<!-- Main group -->
			<control type="group">
				<left>85</left>
				<top>297</top>

				<!-- Heading -->
				<control type="label">
					<animation effect="fade" start="0" end="100" time="200">Visible</animation>
					<left>0</left>
					<top>34</top>
					<width>1200</width>
					<height>72</height>
					<label>33063</label>
					<font>Font72</font>
					<textcolor>DialogColor1</textcolor>
				</control>

				<!-- Options -->
				<control type="grouplist" id="3000">
					<left>0</left>
					<top>130</top>
					<width>1200</width>
					<height>600</height>
					<onup>noop</onup>
					<ondown>noop</ondown>
					<onleft>50</onleft>
					<onright>50</onright>
					<itemgap>8</itemgap>
					<scrolltime>200</scrolltime>
					<orientation>vertical</orientation>
					<defaultcontrol always="true">3001</defaultcontrol>
					<visible allowhiddenfocus="true">ControlGroup(3000).HasFocus()</visible>

					<!-- Dummy to set focus to top -->
					<control type="button" id="3001">
						<width>0</width>
						<height>-8</height>
						<label>-</label>
						<onfocus>Down</onfocus>
					</control>
					<!-- TV Channels -->
					<control type="button" id="32">
						<include>OptionButtons</include>
						<onclick>SetFocus(50)</onclick>
						<label>19023</label>
					</control>
					<!-- Radio Channels -->
					<control type="button" id="33">
						<include>OptionButtons</include>
						<onclick>SetFocus(50)</onclick>
						<label>19024</label>
					</control>
					<!-- TV Guide -->
					<control type="button" id="31">
						<include>OptionButtons</include>
						<label>$LOCALIZE[19222]: $LOCALIZE[19030]</label>
					</control>
					<!-- Recordings -->
					<control type="button" id="34">
						<include>OptionButtons</include>
						<onclick>SetFocus(50)</onclick>
						<label>19163</label>
					</control>
					<!-- Timers -->
					<control type="button" id="35">
						<include>OptionButtons</include>
						<onclick>SetFocus(50)</onclick>
						<label>19040</label>
					</control>
					<!-- Search -->
					<control type="button" id="36">
						<include>OptionButtons</include>
						<onclick>SetFocus(50)</onclick>
						<label>137</label>
					</control>
				</control>

			</control>

		</control>

	</controls>

</window>